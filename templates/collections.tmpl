{% extends "base.tmpl" %}
{% block content %}
  <div class="grid-wrapper">
    <div class="width-12-12 width-12-12-m">
      <div class="collections-title">
        <h2>{{ homepage.collections_page.title }}</h2>
        <p>{{ homepage.collections_page.intro }}</p>
      </div>
    </div>
    <div class="width-12-12 width-12-12-m">
      <p>{{ collections.redirect }}</p>
      <div class="btn-group-vertical"
           role="group"
           aria-label="{{ homepage.labels.button_group }}">
        <div class="doc-link-row doc-link">
          <i class="fas fa-book"></i><a class="btn"
   href="{{ collections.links.collection_index.link }}"
   role="button">{{ collections.links.collection_index.label }}</a>
