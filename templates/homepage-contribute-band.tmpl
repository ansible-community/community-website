<div class="grid-wrapper homepage-contribute-band full-width-band"
     id="contribute">
  <div class="contribute-title width-8-12 width-12-12-m max-width-prose">
    <div class="section-top">
      <i class="fas fa-hands-helping section-icon"></i>
      <h2>{{ homepage.contribute.title }}</h2>
    </div>
    <p>{{ homepage.contribute.intro }}</p>
    <div class="contribute-content">
      <h3>{{ homepage.contribute.heading }}</h3>
      {% for item in homepage.contribute.ways %}
        <ul>
          <li>{{ item }}</li>
        </ul>
      {% endfor %}
      <p>
        {{ homepage.contribute.involved }}&nbsp;Check out our <a href="{{ homepage.contribute.resources_url }}" target="_blank">contributor resources</a> and <a href="/community.html" target="_blank">join the Ansible community</a> - we'd love to have you.
      </p>
    </div>
  </div>
  <div class="contribute-bull width-4-12 width-12-12-m">
    <a href="{{ homepage.contribute.resources_url }}"
       target="_blank"
       aria-label="{{ homepage.contribute.aria_label }}">
      <img src="/images/bull-builder.svg"
           alt="{{ homepage.contribute.bull_builder_alt }}"
           width="357"
           height="302" />
    </a>
  </div>
  {% include "homepage-back-to-top.tmpl" %}
</div>
