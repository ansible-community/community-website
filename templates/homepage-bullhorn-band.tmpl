<div class="grid-wrapper homepage-bullhorn-band homepage-body">
  <div class="width-12-12 width-12-12-m">
    <div class="bullhorn-content">
      <div class="bullhorn-image">
        <img src="/images/bullhorn_subscribe.png" alt="{{ homepage.bullhorn.subscribe_alt }}" width="230" height="180"/>
      </div>
      <div class="bullhorn-subscribe">
        <div id="mc_embed_signup">
          <form
            action="https://ansible.us19.list-manage.com/subscribe/post?u=56d874e027110e35dea0e03c1&amp;id=d6635f5420&amp;f_id=006a98e4f0"
            method="post"
            id="mc-embedded-subscribe-form"
            name="mc-embedded-subscribe-form"
            class="validate"
            target="_blank"
            novalidate>
            <div id="mc_embed_signup_scroll">
              <h2>{{ homepage.bullhorn.title }}</h2>
              <p>{{ homepage.bullhorn.subscribe }}</p>
              <div class="subscribe-row">
                <div class="subscribe-input">
                  <input
                    type="email"
                    value=""
                    placeholder="{{ homepage.bullhorn.placeholder }}"
                    name="EMAIL"
                    class="required email"
                    id="mce-EMAIL"
                    size="50"
                    required />
                </div>
                <div id="mce-responses" class="clear">
                  <div
                    class="response"
                    id="mce-error-response"
                    style="display: none"></div>
                  <div
                    class="response"
                    id="mce-success-response"
                    style="display: none"></div>
                </div>
                <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                <div style="position: absolute; left: -5000px" aria-hidden="true">
                  <input
                    type="text"
                    name="b_56d874e027110e35dea0e03c1_d6635f5420"
                    tabindex="-1"
                    value="" />
                </div>
                <div class="clear">
                  <input
                    type="submit"
                    value="{{ homepage.bullhorn.button }}"
                    name="subscribe"
                    id="mc-embedded-subscribe"
                    class="button" />
                </div>
              </div>
            </div>
          </form>
        </div>
        <script
          type="text/javascript"
          src="http://s3.amazonaws.com/downloads.mailchimp.com/js/mc-validate.js"></script>
        <script type="text/javascript">
          (function ($) {
            window.fnames = new Array();
            window.ftypes = new Array();
            fnames[0] = "EMAIL";
            ftypes[0] = "email";
            fnames[1] = "FNAME";
            ftypes[1] = "text";
            fnames[2] = "LNAME";
            ftypes[2] = "text";
            fnames[3] = "ADDRESS";
            ftypes[3] = "address";
            fnames[4] = "PHONE";
            ftypes[4] = "phone";
          })(jQuery);
          var $mcj = jQuery.noConflict(true);
        </script>
      </div>
    </div>
  </div>
</div>
